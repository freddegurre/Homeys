<div class="container">

    <div class="jumbotron">
        <h1 class="text-center">
            <span class="glyphicon glyphicon-fire"></span> Profile </h1>
        <br>

        <div class="text-center">
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">User Profile </h4>
                    <h3>UserName: {{user_name}}</h3>
                    <h3>Email: {{email}}</h3>
                    <div class="panel-body" id="userProfile">
                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">Properties</h4>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Property Name</th>
                                    <th>Street Address</th>
                                    <th>Zip Code</th>
                                    <th>City</th>
                                    <th>State</th>
                                </tr>
                            </thead>
                            <tbody class= "prop-table">
                                {{#each allProperties}}
                                <tr >
                                    <td class="prop-info">{{propName}}</td>
                                    <td class="prop-info">{{streetAddress}}</td>
                                    <td class="prop-info">{{zipCode}}</td>
                                    <td class="prop-info">{{city}}</td>
                                    <td class="prop-info">{{state}}</td>
                                    
                                    {{/each}}
                                </tr>

                            </tbody>
                        </table>

                    </div>
                    <div class="panel-body" id="propertyProfile">
                        <a href="./Property" title="">this is to register new property.</a>
                        <br>
                    </div>
                </div>
            </div>
        </div>

        <footer class="footer">
            <div class="container">
                <p>
                    <a> Homeys Copyright 2018</a>
                </p>
            </div>
        </footer>

    </div>
    </body>
    <script type="text/javascript">

    if ( $(".prop-info").length ===0 ) {
        $(".prop-table").html("<h3> Click below to add your first property!</h3>")
    }   

    </script>

    </html>