  <button type="submit" class="btn btn-primary floating-btn addProp"><h3>Add Property!</h3></button>
    <section class="bg-light" id="portfolio">
      <div class="container">
        
        {{#each allProperties}}  
        <div class="row">
          <div class="col-lg-12 text-center">
            <h2 class="section-heading text-uppercase">{{propName}}</h2>
            <h3 class="section-subheading text-muted">{{streetAddress}} {{city}} {{state}} {{zipCode}}</h3>
            <a class="btn btn-primary btn-md text-uppercase" id= "signup" data-zipCode={{zipCode}} href="#services">Find a Homey</a>
            <a class="btn btn-primary btn-md text-uppercase" id="editProp" data-id={{id}} href="#services">Edit Property</a>
            <p></p>
          </div>
        </div>
        
        <div class="row">  

          <div class="container">
            
            <div class="col-lg-8 text-center" align="center">
            {{!-- <h2>Carousel Example</h2>   --}}
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
              <!-- Indicators -->
              <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
              </ol>

              <!-- Wrapper for slides -->
              <div class="carousel-inner">
                <div class="item active" align="middle">
                  <img src="img/portfolio/06-thumbnail.jpg" alt="Los Angeles" style="width:75%; height:100%;">
                </div>

                <div class="item" align="middle">
                  <img src="img/portfolio/05-thumbnail.jpg" alt="Chicago" style="width:75%; height:100%;">
                </div>
              
                <div class="item" align="middle">
                  <img src="img/portfolio/04-thumbnail.jpg" alt="New york" style="width:75%; height:100%;">
                </div>
              </div>

              <!-- Left and right controls -->
              <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
            </div>
            {{/each}}

            
            <div class="col-lg-4 text-center" align="right">
              <h5>Tasks for this property</h5>
              <p></p>
              <h6>
                {{Tasks}}
              </h6>

            </div>
          </div>

          

        </div>
      </div>
    </section>
    




